<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditTextPreference
        android:title="@string/pre_location_label"
        android:key="@string/pre_location_key"
        android:defaultValue="@string/pre_location_default"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:title="@string/pre_units_label"
        android:key="@string/pre_units_key"
        android:defaultValue="@string/pre_units_metric"
        android:entryValues="@array/pre_units_values"
        android:entries="@array/pre_units_options" />

</PreferenceScreen>